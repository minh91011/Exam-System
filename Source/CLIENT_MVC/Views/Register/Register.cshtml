@using PROJECT_PRN231.Models.Account
@model Register

@{
    ViewData["Title"] = "Register";
}

 
<style>

/* Add this CSS to your stylesheet */

/* Center the form */
.row {
    display: flex;
    justify-content: center;
}

/* Style the form container */
.col-md-4 {
    background-color: #f8f9fa; /* Light gray background */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
}

/* Style form inputs */
.form-group {
    margin-bottom: 20px;
}

label {
    font-weight: bold;
}

input[type="text"],
input[type="password"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ced4da; /* Light gray border */
    border-radius: 4px;
}

/* Style error messages */
.text-danger {
    color: #dc3545; /* Red color for error messages */
}

/* Style submit button */
.btn-primary {
    background-color: #007bff; /* Blue color for primary button */
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    color: #fff; /* White text color */
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3; /* Darker blue color on hover */
}

/* Style the back to home link */
a {
    color: #007bff; /* Blue color for links */
    text-decoration: none;
    transition: color 0.3s ease;
}

a:hover {
    color: #0056b3; /* Darker blue color on hover */
}

 </style>
<h4>Register</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <span class="text-danger">@ViewBag.Validate</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
