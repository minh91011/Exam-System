@model PROJECT_PRN231.Models.Mail.SendOTP

@{
    ViewData["Title"] = "AddEmail";
}

<h1>AddEmail</h1>

<h4>SendOTP</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-danger">@ViewBag.Validate</span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label" hidden></label>
                <input asp-for="Username" class="form-control" hidden />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SendOtpCode" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Profile</a>
</div>

