@model PROJECT_PRN231.Models.Account.ResetPassword

@{
    ViewData["Title"] = "ForgotPassword";
}
<style>
/* Add this CSS to your stylesheet */

/* Center the form */
.row {
    display: flex;
    justify-content: center;
}

/* Style the form container */
.col-md-4 {
    background-color: #f8f9fa; /* Light gray background */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
}

/* Style form inputs */
.form-group {
    margin-bottom: 20px;
}

label {
    font-weight: bold;
}

input[type="text"],
input[type="password"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ced4da; /* Light gray border */
    border-radius: 4px;
}

/* Style error messages */
.text-danger {
    color: #dc3545; /* Red color for error messages */
}

/* Style submit button */
.btn-primary {
    background-color: #007bff; /* Blue color for primary button */
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    color: #fff; /* White text color */
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3; /* Darker blue color on hover */
}

/* Style the forgot password link */
a.forgot-password {
    color: #007bff; /* Blue color for links */
    text-decoration: none;
    transition: color 0.3s ease;
}

a.forgot-password:hover {
    color: #0056b3; /* Darker blue color on hover */
}

/* Style the back to home link */
a.back-to-home {
    color: #007bff; /* Blue color for links */
    text-decoration: none;
    transition: color 0.3s ease;
}

a.back-to-home:hover {
    color: #0056b3; /* Darker blue color on hover */
}

</style>
 

<h4>ResetPassword</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-danger">@ViewBag.Validate</span>
                <span class="text-info">@ViewBag.Result</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send OTP" class="btn btn-primary" />               
            </div>
            <a asp-action="Index">Back to Login</a>
        </form>
    </div>
</div>

